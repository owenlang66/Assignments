@model Dish
@{
    ViewData["Title"] = "New Dish";
}

<form asp-action="CreateDish" asp-controller="Dish" method="POST">
    <div className="m-3">
        <label asp-for="Chef"></label>
        <input asp-for="Chef" />
        <span asp-validation-for="Chef"></span>
    </div>
    <div className="m-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div className="m-3">
        <label asp-for="Calories"></label>
        <input asp-for="Calories" />
        <span asp-validation-for="Calories"></span>
    </div>
    <div className="m-3">
        <label asp-for="Tastiness"></label>
        <input asp-for="Tastiness" />
        <span asp-validation-for="Tastiness"></span>
    </div>
    <div className="m-3">
        <label asp-for="Description"></label>
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <button>Submit</button>
</form>