@model List<Dish>
@{
    ViewData["Title"] = "All Dishes";
    @* var context = ViewBag.Context as MyContext; *@
}

<h1>Check out our tasty dishes! Yum!</h1>
<hr>
<table class="table">
    <thead>
        <tr>
            <th>Dish Name</th>
            <th>Chef</th>
            <th>Tastiness</th>
            <th>Calories</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Dish dish in Model)
        {
            <tr>
                <td>@dish.Name</td>
                <td>
                    @{
                        string chef = _context.Chefs.FirstOrDefault(c => c.ChefId == dish.ChefId)
                        @chef.FirstName
                    }
                </td>
                <td>@dish.Tastiness</td>
                <td>@dish.Calories</td>

            </tr>
        }
    </tbody>
</table>